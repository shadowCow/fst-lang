{
  "scopeName": "source.fst",
  "fileTypes": ["fst"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "comment": "line comments",
          "name": "comment.line",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "comment": "moves",
          "name": "storage.type.enum",
          "match": "(?i)(?:moves)"
        },
        {
          "comment": "declaration separator",
          "name": "keyword.operator",
          "match": "\\:"
        }
      ]
    }
  }
}
